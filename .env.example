# LLM Provider Configuration
# Vælg mellem "claude" eller "openai"
LLM_PROVIDER=claude

# API Keys
# Tilføj din Claude API key (hent fra: https://console.anthropic.com/)
CLAUDE_API_KEY=your_claude_api_key_here

# Tilføj din OpenAI API key (hent fra: https://platform.openai.com/api-keys)
OPENAI_API_KEY=your_openai_api_key_here

# Model Settings (optional)
CLAUDE_MODEL=claude-3-5-sonnet-20241022
OPENAI_MODEL=gpt-4o

# Gradio Server Settings (optional)
GRADIO_SHARE=false
GRADIO_SERVER_NAME=127.0.0.1
GRADIO_SERVER_PORT=7860

# RAG (Retrieval-Augmented Generation) Settings
# Enable/disable style guide integration
USE_RAG=true

# Path to style guide file
STYLE_GUIDE_PATH=style_guide.md

# Number of guidelines to retrieve (adaptive based on document length)
# Min guidelines for short documents (<100 words)
RAG_MIN_GUIDELINES=5
# Max guidelines for long documents (>500 words)
RAG_MAX_GUIDELINES=15
